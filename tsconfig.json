{
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext",
    }
  },
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDirs": ["./src", "./tests"],
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": ["dist","lib","node_modules"]
}